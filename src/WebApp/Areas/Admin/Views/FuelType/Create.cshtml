@model Domain.Entities.FuelType

@{
    ViewData["Title"] = "Yeni Yakıt Tipi";
    Response response = ViewBag.Response;
}

<h1>Yeni Yakıt Tipi</h1>

<h4>Yakıt Tipi</h4>
<hr />

@if (response != null)
{
    <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Yakıt Tipi Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
