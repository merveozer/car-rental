@model Domain.Entities.VehicleModel

@{
    ViewData["Title"] = "Araç Model İşlemleri";
    Response response = ViewBag.Response;
    List<SelectListItem> vehicleBrands = ViewBag.VehicleBrands;
}

<h1>Yeni Kayıt</h1>

<h4>Araç Modeli</h4>
<hr />

@if (response != null)
{
    <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleBrandId" class="control-label"></label>
                @Html.DropDownListFor(model => model.VehicleBrandId, vehicleBrands, new { @class = "form-control"})
                <span asp-validation-for="VehicleBrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Model Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
