@model Domain.Entities.ColorType

@{
    ViewData["Title"] = "Yeni Araç Rengi";
    Response response = ViewBag.Response;
}

<h1>Yeni Araç Rengi</h1>

<h4>Araç Rengi</h4>
<hr />

@if (response != null)
{
    <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Araç Renk Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
